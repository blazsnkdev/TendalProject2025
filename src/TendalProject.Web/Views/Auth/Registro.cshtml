@model TendalProject.Web.ViewModels.RegistrarUsuarioViewModel
@{
    ViewData["Title"] = "Crear cuenta";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container py-5">
    <div class="row justify-content-center">
        <div class="col-12 col-md-8 col-lg-6 col-xl-5">
            <div class="card shadow-lg border-0 rounded-4 overflow-hidden">
                <!-- Header con degradado -->
                <div class="card-header bg-gradient text-white text-center py-4" style="background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);">
                    <h2 class="mb-0">
                        <i class="bi bi-person-plus-fill me-2"></i>
                        Crear nueva cuenta
                    </h2>
                    <small>Completá todos los campos para registrarte</small>
                </div>

                <div class="card-body p-4 p-md-5">
                    <form asp-action="Registro" asp-controller="Auth" method="post" autocomplete="off">
                        @Html.AntiForgeryToken()

                        <!-- Fila 1: Nombres y apellidos -->
                        <div class="row g-3 mb-3">
                            <div class="col-md-4">
                                <label asp-for="Nombre" class="form-label"></label>
                                <div class="input-group">
                                    <span class="input-group-text"><i class="bi bi-person"></i></span>
                                    <input asp-for="Nombre" class="form-control" placeholder="Juan" />
                                </div>
                                <span asp-validation-for="Nombre" class="text-danger small"></span>
                            </div>
                            <div class="col-md-4">
                                <label asp-for="ApellidoPaterno" class="form-label"></label>
                                <div class="input-group">
                                    <span class="input-group-text"><i class="bi bi-person-badge"></i></span>
                                    <input asp-for="ApellidoPaterno" class="form-control" placeholder="Pérez" />
                                </div>
                                <span asp-validation-for="ApellidoPaterno" class="text-danger small"></span>
                            </div>
                            <div class="col-md-4">
                                <label asp-for="ApellidoMaterno" class="form-label"></label>
                                <div class="input-group">
                                    <span class="input-group-text"><i class="bi bi-person-badge-fill"></i></span>
                                    <input asp-for="ApellidoMaterno" class="form-control" placeholder="Gómez" />
                                </div>
                                <span asp-validation-for="ApellidoMaterno" class="text-danger small"></span>
                            </div>
                        </div>

                        <!-- Fila 2: Celular y fecha nacimiento -->
                        <div class="row g-3 mb-3">
                            <div class="col-md-6">
                                <label asp-for="NumeroCelular" class="form-label"></label>
                                <div class="input-group">
                                    <span class="input-group-text"><i class="bi bi-phone"></i></span>
                                    <input asp-for="NumeroCelular" class="form-control" placeholder="987654321" />
                                </div>
                                <span asp-validation-for="NumeroCelular" class="text-danger small"></span>
                            </div>
                            <div class="col-md-6">
                                <label asp-for="FechaNacimiento" class="form-label"></label>
                                <div class="input-group">
                                    <span class="input-group-text"><i class="bi bi-calendar-event"></i></span>
                                    <input asp-for="FechaNacimiento" class="form-control" type="date" />
                                </div>
                                <span asp-validation-for="FechaNacimiento" class="text-danger small"></span>
                            </div>
                        </div>

                        <!-- Email -->
                        <div class="mb-3">
                            <label asp-for="Email" class="form-label"></label>
                            <div class="input-group">
                                <span class="input-group-text"><i class="bi bi-envelope"></i></span>
                                <input asp-for="Email" class="form-control" placeholder="juan@example.com" />
                            </div>
                            <span asp-validation-for="Email" class="text-danger small"></span>
                        </div>

                        <!-- Contraseñas -->
                        <div class="row g-3 mb-4">
                            <div class="col-md-6">
                                <label asp-for="Password" class="form-label"></label>
                                <div class="input-group">
                                    <span class="input-group-text"><i class="bi bi-lock"></i></span>
                                    <input asp-for="Password" class="form-control" placeholder="Mínimo 6 caracteres" />
                                </div>
                                <span asp-validation-for="Password" class="text-danger small"></span>
                            </div>
                            <div class="col-md-6">
                                <label asp-for="ConfirmarPassword" class="form-label"></label>
                                <div class="input-group">
                                    <span class="input-group-text"><i class="bi bi-lock-fill"></i></span>
                                    <input asp-for="ConfirmarPassword" class="form-control" placeholder="Repite tu contraseña" />
                                </div>
                                <span asp-validation-for="ConfirmarPassword" class="text-danger small"></span>
                            </div>
                        </div>

                        <!-- Mensaje general de error -->
                        <div asp-validation-summary="ModelOnly" class="alert alert-danger mb-4" role="alert"></div>

                        <!-- Botón registrarse -->
                        <div class="d-grid">
                            <button type="submit" class="btn btn-lg btn-success text-white fw-bold">
                                <i class="bi bi-check-circle me-2"></i>
                                Crear mi cuenta
                            </button>
                        </div>
                    </form>

                    <div class="text-center mt-4">
                        <p class="text-muted">
                            ¿Ya tienes cuenta?
                            <a asp-action="Login" class="text-decoration-none fw-bold text-primary">
                                Iniciar sesión aquí
                            </a>
                        </p>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}