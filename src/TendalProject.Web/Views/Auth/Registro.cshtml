@model TendalProject.Web.ViewModels.Auth.RegistrarUsuarioViewModel
@{
    Layout = null;
}
<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Registro de Usuario - Tendal Market</title>
    <link rel="stylesheet" href="~/css/Auth//Registro.css" />
</head>
<body>
    <div class="register-container">
        <div class="register-box">
            <div class="logo-area">
                <h1 class="brand-name">Crea tu Cuenta</h1>
            </div>

            <form asp-controller="Auth" asp-action="Registro" method="post">
                <h2 class="form-title">Tendal Market</h2>

                <div class="row">
                    <div class="col-md-6 form-group">
                        <label asp-for="Nombre"></label>
                        <input asp-for="Nombre" class="form-control" />
                        <span asp-validation-for="Nombre" class="text-danger"></span>
                    </div>
                    <div class="col-md-6 form-group">
                        <label asp-for="ApellidoPaterno"></label>
                        <input asp-for="ApellidoPaterno" class="form-control" />
                        <span asp-validation-for="ApellidoPaterno" class="text-danger"></span>
                    </div>
                </div>

                <div class="row">
                    <div class="col-md-6 form-group">
                        <label asp-for="ApellidoMaterno"></label>
                        <input asp-for="ApellidoMaterno" class="form-control" />
                        <span asp-validation-for="ApellidoMaterno" class="text-danger"></span>
                    </div>
                    <div class="col-md-6 form-group">
                        <label asp-for="NumeroCelular"></label>
                        <input asp-for="NumeroCelular" class="form-control" />
                        <span asp-validation-for="NumeroCelular" class="text-danger"></span>
                    </div>
                </div>

                <div class="form-group">
                    <label asp-for="FechaNacimiento"></label>
                    <input asp-for="FechaNacimiento" type="date" class="form-control" />
                    <span asp-validation-for="FechaNacimiento" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="Email"></label>
                    <input asp-for="Email" class="form-control" placeholder="tucorreo@ejemplo.com" />
                    <span asp-validation-for="Email" class="text-danger"></span>
                </div>

                <div class="row">
                    <div class="col-md-6 form-group">
                        <label asp-for="Password"></label>
                        <input asp-for="Password" type="password" class="form-control" placeholder="Contraseña (mín. 6)" />
                        <span asp-validation-for="Password" class="text-danger"></span>
                    </div>
                    <div class="col-md-6 form-group">
                        <label asp-for="ConfirmarPassword"></label>
                        <input asp-for="ConfirmarPassword" type="password" class="form-control" placeholder="Repite la contraseña" />
                        <span asp-validation-for="ConfirmarPassword" class="text-danger"></span>
                    </div>
                </div>

                <button type="submit" class="btn btn-primary-tendal register-btn">Registrarme</button>

                <div class="login-link">
                    <p>¿Ya tienes cuenta? <a asp-controller="Auth" asp-action="Login">Inicia Sesión</a></p>
                </div>
            </form>
        </div>
    </div>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>
</body>
</html>