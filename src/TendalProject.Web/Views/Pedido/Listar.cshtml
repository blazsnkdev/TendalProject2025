@model TendalProject.Common.Utils.PaginaResult<TendalProject.Web.ViewModels.Pedido.ListarPedidoViewModel>

@{
    ViewData["Title"] = "Pedidos";
}

@section Styles {
    <link rel="stylesheet" href="~/css/Pedido/Listar.css" />
}

<div class="clientes-container">

    <div class="page-header">
        <h1 class="page-title">Módulo Pedidos</h1>
    </div>

    <!-- ===================== -->
    <!--   FORMULARIO FILTROS  -->
    <!-- ===================== -->
    <form method="get" class="row g-3 mb-4 filtros-container">

        <div class="col-md-3">
            <label>Desde</label>
            <input type="date" name="fechaInicio" class="form-control" value="@ViewBag.FechaInicio" />
        </div>

        <div class="col-md-3">
            <label>Hasta</label>
            <input type="date" name="fechaFin" class="form-control" value="@ViewBag.FechaFin" />
        </div>

        <div class="col-md-3">
            <label>Código</label>
            <input type="text" name="codigo" class="form-control" placeholder="Buscar por código"
                   value="@ViewBag.Codigo" />
        </div>

        <div class="col-md-3 d-flex align-items-end">
            <div class="form-check">
                <input class="form-check-input" type="checkbox" name="proximosAEntregar" value="true"
                       @(ViewBag.ProximosAEntregar == true ? "checked" : "") />
                <label class="form-check-label">
                    Próximos a entregar
                </label>
            </div>
        </div>

        <select id="ordenarPor" name="ordenarPor" class="form-control">
            <option value="fecha">Fecha Registro</option>
            <option value="entrega">Fecha Entrega</option>
        </select>

        <select id="orden" name="orden" class="form-control">
            <option value="asc">Ascendente</option>
            <option value="desc">Descendente</option>
        </select>


        <div class="col-md-3 d-flex align-items-end">
            <button type="submit" class="btn btn-primary w-100">Filtrar</button>
        </div>
    </form>

    @if (Model.Items.Any())
    {
        <div class="pagination-controls">
            <div class="registros-info">
                Mostrando @((Model.PaginaIndice - 1) * Model.TamanioPagina + 1) -
                @Math.Min(Model.PaginaIndice * Model.TamanioPagina, Model.TotalRegistros)
                de @Model.TotalRegistros registros
            </div>

            <div class="tamanio-pagina">
                <span class="tamanio-label">Registros por página:</span>
                <div>
                    @foreach (var size in new[] { 5, 10, 25, 50 })
                    {
                        <a asp-action="Listar"
                           asp-route-pagina="1"
                           asp-route-tamanioPagina="@size"
                           asp-all-route-data="@(new Dictionary<string,string> {
                               { "fechaInicio", ViewBag.FechaInicio },
                               { "fechaFin", ViewBag.FechaFin },
                               { "codigo", ViewBag.Codigo },
                               { "ordenarPor", ViewBag.OrdenarPor },
                               { "orden", ViewBag.Orden }
                           })"
                           class="btn-tamanio @(Model.TamanioPagina == size ? "active" : "")">
                            @size
                        </a>
                    }
                </div>
            </div>
        </div>

        <table class="table table-striped">
            <thead>
                <tr>
                    <th>Código</th>
                    <th>Cliente</th>
                    <th>Fecha Registro</th>
                    <th>Fecha Entrega</th>
                    <th>Total</th>
                    <th>Estado</th>
                    <th>Items</th>
                    <th>Acciones</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model.Items)
                {
                    <tr>
                        <td>@item.Codigo</td>
                        <td>@item.NombreCliente</td>
                        <td>@item.FechaRegistro.ToString("dd/MM/yyyy")</td>
                        <td>@(item.FechaEntrega?.ToString("dd/MM/yyyy") ?? "-")</td>
                        <td>S/ @item.Total</td>
                        <td>@item.Estado</td>
                        <td>@item.CantidadArticulos</td>
                        <td>
                            <a asp-action="Detalles" asp-route-pedidoId="@item.PedidoId"
                               class="btn btn-sm btn-outline-info">
                                <i class="fas fa-info-circle"></i> Detalle
                            </a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>


        <nav aria-label="Paginación">
            <ul class="pagination-custom">

                <li class="page-item-custom @(!Model.TienePaginaAnterior ? "disabled" : "")">
                    <a class="page-link-custom"
                       asp-action="Listar"
                       asp-route-pagina="1"
                       asp-route-tamanioPagina="@Model.TamanioPagina"
                       asp-all-route-data="@(ViewBag.Routes)">
                        <i class="fas fa-angle-double-left"></i>
                    </a>
                </li>

                <li class="page-item-custom @(!Model.TienePaginaAnterior ? "disabled" : "")">
                    <a class="page-link-custom"
                       asp-action="Listar"
                       asp-route-pagina="@(Model.PaginaIndice - 1)"
                       asp-route-tamanioPagina="@Model.TamanioPagina"
                       asp-all-route-data="@(ViewBag.Routes)">
                        <i class="fas fa-angle-left"></i>
                    </a>
                </li>

                @{
                    int inicio = Math.Max(1, Model.PaginaIndice - 2);
                    int fin = Math.Min(Model.TotalPagias, Model.PaginaIndice + 2);
                }

                @for (int i = inicio; i <= fin; i++)
                {
                    <li class="page-item-custom @(i == Model.PaginaIndice ? "active" : "")">
                        <a class="page-link-custom"
                           asp-action="Listar"
                           asp-route-pagina="@i"
                           asp-route-tamanioPagina="@Model.TamanioPagina"
                           asp-all-route-data="@(ViewBag.Routes)">@i</a>
                    </li>
                }

                <li class="page-item-custom @(!Model.TienePaginaSiguiente ? "disabled" : "")">
                    <a class="page-link-custom"
                       asp-action="Listar"
                       asp-route-pagina="@(Model.PaginaIndice + 1)"
                       asp-route-tamanioPagina="@Model.TamanioPagina"
                       asp-all-route-data="@(ViewBag.Routes)">
                        <i class="fas fa-angle-right"></i>
                    </a>
                </li>

                <li class="page-item-custom @(!Model.TienePaginaSiguiente ? "disabled" : "")">
                    <a class="page-link-custom"
                       asp-action="Listar"
                       asp-route-pagina="@Model.TotalPagias"
                       asp-route-tamanioPagina="@Model.TamanioPagina"
                       asp-all-route-data="@(ViewBag.Routes)">
                        <i class="fas fa-angle-double-right"></i>
                    </a>
                </li>

            </ul>
        </nav>
    }
    else
    {
        <div class="estado-vacio">
            <i class="fas fa-file"></i>
            <h4>No hay pedidos</h4>
            <p>No se encontraron resultados con los filtros.</p>
        </div>
    }
</div>
@section Scripts {
    <script src="~/js/Pedido/Listar.js"></script>
}