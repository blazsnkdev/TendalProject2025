@model TendalProject.Common.Utils.PaginaResult<TendalProject.Web.ViewModels.Pedido.ListarPedidoViewModel>
@using TendalProject.Entities.Enum
@{
    ViewData["Title"] = "Pedidos";
}

@section Styles {
    <link rel="stylesheet" href="~/css/Pedido/Listar.css" />
}

<div class="clientes-container">

    <div class="page-header">
        <h1 class="page-title">Módulo Pedidos</h1>
    </div>
    <form method="get" class="row g-3 mb-4 filtros-container">

        <div class="col-md-3">
            <label>Desde</label>
            <input type="date" name="fechaInicio" class="form-control" value="@ViewBag.FechaInicio" />
        </div>

        <div class="col-md-3">
            <label>Hasta</label>
            <input type="date" name="fechaFin" class="form-control" value="@ViewBag.FechaFin" />
        </div>

        <div class="col-md-3">
            <label>Código</label>
            <input type="text" name="codigo" class="form-control" placeholder="Buscar por código"
                   value="@ViewBag.Codigo" />
        </div>

        <div class="col-md-3">
            <label>Estado</label>
            <select name="estado" class="form-control">
                <option value="">Todos los estados</option>
                <option value="0" selected="@(ViewBag.Estado?.ToString() == "0")">Pendiente</option>
                <option value="1" selected="@(ViewBag.Estado?.ToString() == "1")">Procesando</option>
                <option value="2" selected="@(ViewBag.Estado?.ToString() == "2")">Enviado</option>
                <option value="3" selected="@(ViewBag.Estado?.ToString() == "3")">Entregado</option>
                <option value="4" selected="@(ViewBag.Estado?.ToString() == "4")">Cancelado</option>
                <option value="5" selected="@(ViewBag.Estado?.ToString() == "5")">Pagado</option>
            </select>
        </div>

        <div class="col-md-3 d-flex align-items-end">
            <div class="form-check">
                <input class="form-check-input" type="checkbox" name="proximosAEntregar" value="true"
                       @(ViewBag.ProximosAEntregar == true ? "checked" : "") />
                <label class="form-check-label">
                    Próximos a entregar
                </label>
            </div>
        </div>

        <div class="col-md-3">
            <label>Ordenar por</label>
            <select id="ordenarPor" name="ordenarPor" class="form-control">
                <option value="fecha" selected="@(ViewBag.OrdenarPor == "fecha")">Fecha Registro</option>
                <option value="entrega" selected="@(ViewBag.OrdenarPor == "entrega")">Fecha Entrega</option>
                <option value="estado" selected="@(ViewBag.OrdenarPor == "estado")">Estado</option>
            </select>
        </div>

        <div class="col-md-3">
            <label>Orden</label>
            <select id="orden" name="orden" class="form-control">
                <option value="asc" selected="@(ViewBag.Orden == "asc")">Ascendente</option>
                <option value="desc" selected="@(ViewBag.Orden == "desc")">Descendente</option>
            </select>
        </div>

        <div class="col-md-3 d-flex align-items-end">
            <button type="submit" class="btn btn-primary w-100">Filtrar</button>
        </div>
    </form> 

    @if (Model.Items.Any())
    {
        <div class="pagination-controls">
            <div class="registros-info">
                Mostrando @((Model.PaginaIndice - 1) * Model.TamanioPagina + 1) -
                @Math.Min(Model.PaginaIndice * Model.TamanioPagina, Model.TotalRegistros)
                de @Model.TotalRegistros registros
            </div>

            <div class="tamanio-pagina">
                <span class="tamanio-label">Registros por página:</span>
                <div>
                    @foreach (var size in new[] { 5, 10, 25, 50 })
                    {
                        <a asp-action="Listar"
                           asp-route-pagina="1"
                           asp-route-tamanioPagina="@size"
                           asp-all-route-data="@(new Dictionary<string,string> {
                                      { "fechaInicio", ViewBag.FechaInicio },
                                      { "fechaFin", ViewBag.FechaFin },
                                      { "codigo", ViewBag.Codigo },
                                      { "estado", ViewBag.Estado?.ToString() },
                                      { "ordenarPor", ViewBag.OrdenarPor },
                                      { "orden", ViewBag.Orden }
                                  })"
                   class="btn-tamanio @(Model.TamanioPagina == size ? "active" : "")">
                    @size
                </a>
                                }
                </div>
            </div>
        </div>
        <br />
        <table class="table table-striped">
            <thead class="table table-dark">
                <tr>
                    <th>Código</th>
                    <th>Cliente</th>
                    <th>Fecha Registro</th>
                    <th>Fecha Entrega</th>
                    <th>Total</th>
                    <th>Estado</th>
                    <th>Items</th>
                    <th>Acciones</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model.Items)
                {
                    <tr>
                        <td>@item.Codigo</td>
                        <td>@item.NombreCliente</td>
                        <td>@item.FechaRegistro.ToString("dd/MM/yyyy")</td>
                        <td>@(item.FechaEntrega?.ToString("dd/MM/yyyy") ?? "-")</td>
                        <td>S/ @item.Total</td>
                        <td>@item.Estado</td>
                        <td>@item.CantidadArticulos</td>
                        <td>
                            <a asp-action="Detalles" asp-route-pedidoId="@item.PedidoId"
                               class="btn btn-sm btn-outline-info">
                                <i class="fas fa-info-circle"></i> Detalles
                            </a> |
                            <button type="button" class="btn btn-primary btn-sm"
                                    data-bs-toggle="modal"
                                    data-bs-target="#cambiarEstadoModal"
                                    data-pedidoid="@item.PedidoId"
                                    data-estadoactual="@item.Estado"
                                    onclick="cargarEstados(this)">
                                Cambiar Estado
                            </button>

                        </td>
                    </tr>
                }
            </tbody>
        </table>


        <nav aria-label="Paginación">
            <ul class="pagination-custom">

                <li class="page-item-custom @(!Model.TienePaginaAnterior ? "disabled" : "")">
                    <a class="page-link-custom"
                       asp-action="Listar"
                       asp-route-pagina="1"
                       asp-route-tamanioPagina="@Model.TamanioPagina"
                       asp-all-route-data="@(ViewBag.Routes)">
                        <i class="fas fa-angle-double-left"></i>
                    </a>
                </li>

                <li class="page-item-custom @(!Model.TienePaginaAnterior ? "disabled" : "")">
                    <a class="page-link-custom"
                       asp-action="Listar"
                       asp-route-pagina="@(Model.PaginaIndice - 1)"
                       asp-route-tamanioPagina="@Model.TamanioPagina"
                       asp-all-route-data="@(ViewBag.Routes)">
                        <i class="fas fa-angle-left"></i>
                    </a>
                </li>

                @{
                    int inicio = Math.Max(1, Model.PaginaIndice - 2);
                    int fin = Math.Min(Model.TotalPagias, Model.PaginaIndice + 2);
                }

                @for (int i = inicio; i <= fin; i++)
                {
                    <li class="page-item-custom @(i == Model.PaginaIndice ? "active" : "")">
                        <a class="page-link-custom"
                           asp-action="Listar"
                           asp-route-pagina="@i"
                           asp-route-tamanioPagina="@Model.TamanioPagina"
                           asp-all-route-data="@(ViewBag.Routes)">@i</a>
                    </li>
                }

                <li class="page-item-custom @(!Model.TienePaginaSiguiente ? "disabled" : "")">
                    <a class="page-link-custom"
                       asp-action="Listar"
                       asp-route-pagina="@(Model.PaginaIndice + 1)"
                       asp-route-tamanioPagina="@Model.TamanioPagina"
                       asp-all-route-data="@(ViewBag.Routes)">
                        <i class="fas fa-angle-right"></i>
                    </a>
                </li>

                <li class="page-item-custom @(!Model.TienePaginaSiguiente ? "disabled" : "")">
                    <a class="page-link-custom"
                       asp-action="Listar"
                       asp-route-pagina="@Model.TotalPagias"
                       asp-route-tamanioPagina="@Model.TamanioPagina"
                       asp-all-route-data="@(ViewBag.Routes)">
                        <i class="fas fa-angle-double-right"></i>
                    </a>
                </li>

            </ul>
        </nav>
    }
    else
    {
        <div class="estado-vacio">
            <i class="fas fa-file"></i>
            <h4>No hay pedidos</h4>
            <p>No se encontraron resultados con los filtros.</p>
        </div>
    }
</div>

<div class="modal fade" id="cambiarEstadoModal" tabindex="-1" aria-labelledby="cambiarEstadoModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <form asp-action="CambiarEstado" method="post">
                @Html.AntiForgeryToken()
                <input type="hidden" id="modalPedidoId" name="PedidoId" />

                <div class="modal-header">
                    <h5 class="modal-title" id="cambiarEstadoModalLabel">Cambiar Estado del Pedido</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>

                <div class="modal-body">
                    <div class="mb-3">
                        <label class="form-label">Estado Actual:</label>
                        <input type="text" id="estadoActualDisplay" class="form-control" readonly>
                    </div>

                    <div class="mb-3">
                        <label for="EstadoSeleccionado" class="form-label">Nuevo Estado:</label>
                        <select id="EstadoSeleccionado" name="EstadoSeleccionado" class="form-select" required>
                            <option value="">-- Seleccione un estado --</option>
                        </select>
                    </div>
                </div>

                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancelar</button>
                    <button type="submit" class="btn btn-primary">Guardar Cambio</button>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <script src="~/js/Pedido/Listar.js"></script>
}