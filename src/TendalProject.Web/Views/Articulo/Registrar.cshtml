@model TendalProject.Web.ViewModels.Articulo.RegistrarArticuloViewModel

@{
    ViewData["Title"] = "Registrar Artículo";
}
@section Styles {
    <link rel="stylesheet" href="~/css/Articulo/Registrar.css" />
}
<h2 class="mb-4">Registrar Artículo</h2>
<h4 class="mb-4">Nuevo Articulo</h4>

<div class="row justify-content-center">
    <div class="col-md-6">
        <form asp-action="Registrar" method="post" enctype="multipart/form-data">
            @Html.AntiForgeryToken()
            <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>
            <div class="mb-3">
                <label asp-for="Nombre" class="form-label"></label>
                <input asp-for="Nombre" class="form-control" placeholder="nombre del arituclo.."/>
                <span asp-validation-for="Nombre" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="Descripcion" class="form-label"></label>
                <textarea asp-for="Descripcion" rows="2" class="form-control" placeholder="descripción..."></textarea>
                <span asp-validation-for="Descripcion" class="text-danger"></span>
            </div>

            <div class="row">
                <div class="col-md-6 mb-3">
                    <label asp-for="Precio" class="form-label"></label>
                    <input asp-for="Precio" class="form-control" />
                    <span asp-validation-for="Precio" class="text-danger"></span>
                </div>

                <div class="col-md-6 mb-3">
                    <label asp-for="Stock" class="form-label"></label>
                    <input asp-for="Stock" class="form-control" />
                    <span asp-validation-for="Stock" class="text-danger"></span>
                </div>
            </div>

            <div class="mb-3">
                <label asp-for="CategoriaId" class="form-label">Categoría</label>
                <select asp-for="CategoriaId" asp-items="@ViewBag.Categorias" class="form-select">
                    <option value="">-- Seleccione una categoría --</option>
                </select>
                <span asp-validation-for="CategoriaId" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="ProveedorId" class="form-label">Proveedor</label>
                <select asp-for="ProveedorId" asp-items="@ViewBag.Proveedores" class="form-select">
                    <option value="">-- Seleccione un proveedor --</option>
                </select>
                <span asp-validation-for="ProveedorId" class="text-danger"></span>
            </div>

            <!-- Imagen -->
            <div class="mb-3">
                <label class="form-label">Imagen del artículo</label>
                <input asp-for="Imagen" class="form-control" type="file" accept="image/*" onchange="previewImage(event)" />

                <div class="mt-2">
                    <img id="preview" src="#" alt="Vista previa" style="max-width: 150px; display:none;" />
                </div>

                <span asp-validation-for="Imagen" class="text-danger"></span>
            </div>

            <div class="d-flex gap-2">
                <input type="submit" value="Registrar" class="btn btn-primary" />
                <a asp-action="Listar" class="btn btn-secondary me-auto">Regresar</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    <script src="~/js/Articulo/Registrar.js"></script>
}
