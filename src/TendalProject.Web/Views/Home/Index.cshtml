@using TendalProject.Web.ViewModels.Dashboard
@model DashboardViewModel

@{
    ViewData["Title"] = "Dashboard";
}

<div class="container mt-4">

    <h2 class="mb-4">📊 Dashboard</h2>

    <!-- CARDS -->
    <div class="row g-3 mb-4">
        <div class="col-md-3">
            <div class="card shadow-sm border-0 text-center">
                <div class="card-body">
                    <h6 class="text-muted">Ventas Hoy</h6>
                    <h4 class="fw-bold text-success">S/. @Model.VentasHoy.ToString("N2")</h4>
                </div>
            </div>
        </div>

        <div class="col-md-3">
            <div class="card shadow-sm border-0 text-center">
                <div class="card-body">
                    <h6 class="text-muted">Ventas del Mes</h6>
                    <h4 class="fw-bold text-primary">S/. @Model.VentasMes.ToString("N2")</h4>
                </div>
            </div>
        </div>

        <div class="col-md-3">
            <div class="card shadow-sm border-0 text-center">
                <div class="card-body">
                    <h6 class="text-muted">Pedidos Hoy</h6>
                    <h4 class="fw-bold">@Model.PedidosHoy</h4>
                </div>
            </div>
        </div>

        <div class="col-md-3">
            <div class="card shadow-sm border-0 text-center">
                <div class="card-body">
                    <h6 class="text-muted">Pedidos Pendientes</h6>
                    <h4 class="fw-bold text-danger">@Model.PedidosPendientes</h4>
                </div>
            </div>
        </div>
    </div>

    <!-- GRÁFICO -->
    <div class="card shadow-sm border-0">
        <div class="card-body">
            <h5 class="mb-3">Resumen de pedidos</h5>
            <canvas id="chartPedidos"></canvas>
        </div>
    </div>

</div>

@section Scripts {
    <script>
        window.dashboardData = {
            pedidosHoy: @Model.PedidosHoy,
            pedidosPendientes: @Model.PedidosPendientes
        };
    </script>

    <script src="~/js/Home/Index.js"></script>
}
