@model TendalProject.Web.ViewModels.Usuario.DetalleUsuarioViewModel

@{
    ViewData["Title"] = "Detalle";
}
@section Styles {
    <link rel="stylesheet" href="~/css/Usuario/Detalle.css" />
}
<h1>Detalle</h1>

<div>
    <h4>Datos del Usuario</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Email)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Email)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.UltimaConexion)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.UltimaConexion)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.IntentosFallidos)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.IntentosFallidos)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Activo)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Activo)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.FechaCreacion)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.FechaCreacion)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Roles)
        </dt>
        <dd class="col-sm-10">
            @foreach (var rol in Model.Roles)
            {
                <span>@rol</span><br />
            }
        </dd>
    </dl>
</div>
<div>
    <form asp-action="ModificarEstado" asp-route-usuarioId="@Model.UsuarioId" method="post">
        @if (Model.Activo)
        {
            <input type="submit" value="Desactivar Usuario" class="btn btn-danger" />
        }
        else
        {
            <input type="submit" value="Activar Usuario" class="btn btn-success" />
        }
    </form>
    <br />
    <a asp-action="Listar" class="btn btn-secondary">Regresar</a>
</div>
