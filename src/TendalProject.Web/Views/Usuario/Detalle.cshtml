@model TendalProject.Web.ViewModels.Usuario.DetalleUsuarioViewModel

@{
    ViewData["Title"] = "Detalle del Usuario";
}
@section Styles {
    <link rel="stylesheet" href="~/css/Usuario/Detalle.css" />
}
<h1>Detalle</h1>
    <h4>Datos del Usuario</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Email)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Email)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.UltimaConexion)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.UltimaConexion)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.IntentosFallidos)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.IntentosFallidos)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Activo)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Activo)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.FechaCreacion)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.FechaCreacion)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Roles)
        </dt>
        <dd class="col-sm-10">
            @foreach (var rol in Model.Roles)
            {
                <span>@rol</span><br />
            }
        </dd>
    </dl>
    <div>
        <form id="formEstado"
              asp-action="ModificarEstado"
              asp-route-usuarioId="@Model.UsuarioId"
              method="post"
              class="flex-grow-1">

            <button type="button"
                    class="btn @(Model.Activo ? "btn-danger" : "btn-success")"
                    onclick="confirmarCambioEstado(@Model.Activo.ToString().ToLower())">

                <i class="bi @(Model.Activo ? "bi-x-circle" : "bi-check-circle")"></i>
                @(Model.Activo ? "Desactivar" : "Activar")
            </button>
        </form>
    </div>

@section Scripts {
    <script src="~/js/Usuario/Detalle.js"></script>
}
