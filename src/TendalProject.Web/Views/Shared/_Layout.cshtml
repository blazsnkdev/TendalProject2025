<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Minimarket Tendal</title>
    <script type="importmap"></script>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/TendalProject.Web.styles.css" asp-append-version="true" />
    <link rel="icon" type="image/x-icon" href="~/tendal.png" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" />
    @RenderSection("Styles", required: false)
</head>
<body class="d-flex flex-column min-vh-100">
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light navbar-tendal mb-3">
            <div class="container-fluid">
                <a class="navbar-brand" asp-area="" asp-controller="Ecommerce" asp-action="Catalogo">Minimarket Tendal</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">

                        @if (User.IsInRole("Administrador"))
                        {
                            <li class="nav-item dropdown">
                                <a class="nav-link dropdown-toggle text-dark"
                                   href="#"
                                   id="modulosDropdown"
                                   role="button"
                                   data-bs-toggle="dropdown"
                                   aria-expanded="false">
                                    Módulos
                                </a>

                                <ul class="dropdown-menu">
                                    <li><a class="dropdown-item" asp-controller="Articulo" asp-action="Listar">Artículos</a></li>
                                    <li><a class="dropdown-item" asp-controller="Categoria" asp-action="Listar">Categorías</a></li>
                                    <li><a class="dropdown-item" asp-controller="Proveedor" asp-action="Listar">Proveedores</a></li>
                                    <li><a class="dropdown-item" asp-controller="Usuario" asp-action="Listar">Usuarios</a></li>
                                    <li><a class="dropdown-item" asp-controller="Cliente" asp-action="Listar">Clientes</a></li>
                                    <li><a class="dropdown-item" asp-controller="Pedido" asp-action="Listar">Pedidos</a></li>
                                </ul>
                            </li>
                        }

                        @if (User.IsInRole("Cliente"))
                        {
                            <li class="nav-item">
                                <a class="nav-link text-dark"
                                   asp-controller="Ecommerce"
                                   asp-action="Catalogo">
                                    Catálogo
                                </a>
                            </li>
                        }

                    </ul>
                    <ul class="navbar-nav ms-auto">
                        @if (User.Identity.IsAuthenticated)
                        {
                            <li class="nav-item dropdown">
                                <a class="nav-link dropdown-toggle text-dark d-flex align-items-center"
                                   href="#"
                                   id="userDropdown"
                                   role="button"
                                   data-bs-toggle="dropdown"
                                   aria-expanded="false">
                                    <i class="bi bi-person-circle me-2"></i>
                                    <span>@User.Identity.Name</span>
                                </a>
                                <ul class="dropdown-menu dropdown-menu-end" aria-labelledby="userDropdown">
                                    
                                    @if (User.IsInRole("Administrador"))
                                    {
                                        <li>
                                            <a class="dropdown-item" asp-controller="Home" asp-action="Index">
                                                Dashboard
                                            </a>
                                        </li>
                                        <li><hr class="dropdown-divider"></li>
                                    }

                                    @if (User.IsInRole("Cliente"))
                                    {
                                        <li>
                                            <a class="dropdown-item" asp-controller="Cliente" asp-action="Perfil">
                                                Mi Perfil
                                            </a>
                                        </li>
                                        <li>
                                            <a class="dropdown-item" asp-controller="Pedido" asp-action="Historial">
                                                Mis Pedidos
                                            </a>
                                        </li>
                                        <li>
                                            <a class="dropdown-item" asp-controller="Ecommerce" asp-action="Carrito">
                                                Mi Carrito
                                            </a>
                                        </li>
                                        <li><hr class="dropdown-divider"></li>
                                    }

                                    
                                    <li>
                                        <form method="post" asp-controller="Auth" asp-action="Logout" id="logoutForm" class="m-0">
                                            <button type="submit" class="dropdown-item">
                                                <i class="bi bi-box-arrow-right me-2"></i>Cerrar Sesión
                                            </button>
                                        </form>
                                    </li>
                                </ul>
                            </li>
                        }
                        else
                        {
                            <li class="nav-item">
                                <a class="nav-link text-dark" asp-controller="Auth" asp-action="Login">
                                    <i class="bi bi-box-arrow-in-right me-1"></i>Iniciar Sesión
                                </a>
                            </li>
                        }
                    </ul>

                </div>
            </div>
        </nav>
    </header>
    <div class="container flex-grow-1">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="footer-tendal mt-auto">
        <div class="container text-center">
            <h5 class="mb-2">Minimarket Tendal</h5>
            <p class="mb-1">Tienda virtual dedicada a la venta de artículos y accesorios.</p>

            <p class="mb-1">
                📧 contacto@tendal.pe <br />
                📞 WhatsApp: 999 999 999
            </p>

            <small>
                <a asp-controller="Home" asp-action="Politica">Términos</a> |
                <a asp-controller="Home" asp-action="Privacy">Política de Privacidad</a>
            </small>
        </div>
    </footer>


    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>

    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
    <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
