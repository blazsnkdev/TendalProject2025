@model TendalProject.Web.ViewModels.Ecommerce.CarritoCheckoutViewModel

@{
    ViewData["Title"] = "Checkout";
}

<h2 class="mb-4">Confirmar compra</h2>

<div class="row">
    <!-- RESUMEN DE PRODUCTOS -->
    <div class="col-md-8">
        <div class="card shadow-sm mb-4">
            <div class="card-header">
                <h5 class="mb-0">Resumen del carrito</h5>
            </div>
            <div class="card-body p-0">
                <table class="table table-striped mb-0">
                    <thead class="table-light">
                        <tr>
                            <th>Producto</th>
                            <th class="text-center">Cantidad</th>
                            <th class="text-end">Precio</th>
                            <th class="text-end">Subtotal</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model.Items)
                        {
                            <tr>
                                <td>
                                    <div class="d-flex align-items-center gap-2">
                                        <img src="@item.Imagen"
                                             alt="@item.NombreArticulo"
                                             style="width:50px;height:50px;object-fit:cover;"
                                             class="rounded" />
                                        <span>@item.NombreArticulo</span>
                                    </div>
                                </td>
                                <td class="text-center">@item.Cantidad</td>
                                <td class="text-end">S/ @item.Precio.ToString("N2")</td>
                                <td class="text-end fw-bold">S/ @item.SubTotal.ToString("N2")</td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>

    <!-- RESUMEN DE PAGO -->
    <div class="col-md-4">
        <div class="card shadow-sm">
            <div class="card-header">
                <h5 class="mb-0">Resumen de pago</h5>
            </div>
            <div class="card-body">
                <p class="d-flex justify-content-between">
                    <span>Productos:</span>
                    <strong>@Model.CantidadTotal</strong>
                </p>

                <p class="d-flex justify-content-between">
                    <span>Total:</span>
                    <strong>S/ @Model.Total.ToString("N2")</strong>
                </p>

                <hr />

                <form asp-controller="Pago" asp-action="Pagar" method="post">
                    <button class="btn btn-success btn-lg w-100">
                        Pagar con Mercado Pago
                    </button>
                </form>


                <a asp-action="Carrito" class="btn btn-outline-secondary w-100 mt-2">
                    Volver al carrito
                </a>
            </div>
        </div>
    </div>
</div>
