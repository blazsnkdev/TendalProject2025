@model TendalProject.Web.ViewModels.Ecommerce.CarritoCheckoutViewModel
@{
    ViewData["Title"] = "Confirmación de compra";
}
@section Styles {
    <link rel="stylesheet" href="~/css/Ecommerce/_BaseEcommerce.css" />
    <link rel="stylesheet" href="~/css/Ecommerce/Checkout.css" />
}

<div class="container mt-4">
    <h2 class="page-title">Confirmación de Compra</h2>

    <div class="row">
        <div class="col-lg-8">
            <div>
                <div class="card-body p-0">
                    <table class="table mb-0">
                        <thead class="table-dark">
                            <tr>
                                <th>Producto</th>
                                <th>Cantidad</th>
                                <th>Precio</th>
                                <th>Subtotal</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model.Items)
                            {
                                <tr>
                                    <td>@item.NombreArticulo</td>
                                    <td class="text-center">@item.Cantidad</td>
                                    <td>S/ @item.Precio</td>
                                    <td><strong>S/ @item.SubTotal</strong></td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>

        <div class="col-lg-4">
            <div class="card shadow">
                <div class="card-body">
                    <h4 class="card-title">Pago</h4>
                    <hr />

                    <p class="d-flex justify-content-between">
                        <span>Productos:</span>
                        <strong>@Model.CantidadTotal</strong>
                    </p>

                    <p class="d-flex justify-content-between fs-5">
                        <span>Total:</span>
                        <strong>S/ @Model.Total</strong>
                    </p>

                    <form asp-controller="Pago" asp-action="Pagar" method="post">
                        <input type="hidden" name="ClienteId" value="@Model.ClienteId" />
                        <input type="hidden" name="CarritoId" value="@Model.CarritoId" />

                        <label class="form-label mt-2">Fecha de entrega</label>
                        <input type="date"
                               name="FechaEntrega"
                               value="@Model.FechaEntrega.ToString("yyyy-MM-dd")"
                               class="form-control mb-3" />

                        <button class="btn btn-primary-tendal w-100">
                            Pagar
                        </button>
                    </form>
                    <a asp-action="Carrito" class="btn btn-outline-secondary w-100 mt-2">
                        Volver al carrito
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>
