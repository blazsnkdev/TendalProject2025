@model TendalProject.Web.ViewModels.Ecommerce.DetalleArticuloSeleccionadoViewModel

@{
    ViewData["Title"] = "Detalle";
}

<h1>Detalle</h1>

<div>
    <h4>DetalleArticuloSeleccionadoViewModel</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            Nombre
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.NombreArticulo)
        </dd>
        <dt class = "col-sm-2">
            Categoria
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.NombreCategoria)
        </dd>
        <dt class = "col-sm-2">
            Descripción
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Descripcion)
        </dd>
        <dt class = "col-sm-2">
            Precio
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Precio)
        </dd>
        <dt class = "col-sm-2">
            Stock Total
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Stock)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Imagen)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Imagen)
        </dd>
        <dt class = "col-sm-2">
            Calificación del Articulo
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Calificacion)
        </dd>
    </dl>
</div>
<div>
    <form asp-controller="Ecommerce"
          asp-action="Agregar"
          asp-route-articuloId="@Model.ArticuloId"
          method="post">
        <label for="cantidad" class="form-label">Cantidad:</label>
        @Html.TextBox("cantidad", "1", new {
        type = "number",
                min = 1,
                max = Model.Stock,
                @class = "form-control",
                style = "max-width:120px"
                })

        <button type="submit" class="btn btn-primary-tendal mt-2">
            Agregar al Carrito
        </button>
    </form>

    <br />
    <a asp-action="Catalogo">Regresar al Catálogo</a>
</div>

