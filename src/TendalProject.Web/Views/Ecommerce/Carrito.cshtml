@model TendalProject.Web.ViewModels.Ecommerce.CarritoViewModel
@{
    ViewData["Title"] = "Mi Carrito";
}
@section Styles {
    <link rel="stylesheet" href="~/css/Ecommerce/_BaseEcommerce.css" />
    <link rel="stylesheet" href="~/css/Ecommerce/Carrito.css" />
}



    @if (!Model.Items.Any())
    {
        <div class="empty-state">
            <div style="font-size:4rem">🛒</div>
            <h4>Tu carrito está vacío</h4>
            <p>Explora nuestros productos y agrega lo que más te guste.</p>

            <a asp-controller="Ecommerce"
               asp-action="Catalogo"
               class="empty-state-link">
                Seguir comprando →
            </a>
        </div>
    }
    else
    {
    <div class="container mt-4">
        <h2 class="page-title">Tu Carrito</h2>
        <div class="row">
            <div class="col-lg-8">
                <table class="table align-middle">
                    <thead class="table-dark">
                        <tr>
                            <th>Imagen</th>
                            <th>Artículo</th>
                            <th>Precio</th>
                            <th>Cantidad</th>
                            <th>Subtotal</th>
                            <th></th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model.Items)
                        {
                            <tr>
                                <td style="width:100px">
                                    <img src="@Url.Content("~/" + item.Imagen)" class="img-fluid" />
                                </td>
                                <td>@item.NombreArticulo</td>
                                <td>S/ @item.Precio</td>
                                <td>
                                    <form asp-action="ActualizarCantidad"
                                          asp-route-itemId="@item.ItemId"
                                          method="post"
                                          class="d-flex gap-2">
                                        @Html.AntiForgeryToken()
                                        <input type="number" name="cantidad"
                                               value="@item.Cantidad"
                                               min="1"
                                               class="form-control form-control-sm"
                                               style="width:80px" />
                                        <button class="btn btn-success btn-sm">
                                            ✓
                                        </button>
                                    </form>
                                </td>
                                <td><strong>S/ @item.SubTotal</strong></td>
                                <td>
                                    <form asp-action="EliminarItem"
                                          asp-route-itemId="@item.ItemId"
                                          method="post">
                                        @Html.AntiForgeryToken()
                                        <button class="btn btn-danger btn-sm">
                                            Quitar
                                        </button>
                                    </form>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>

            <div class="col-lg-4">
                <div class="card shadow">
                    <div class="card-body">
                        <h4 class="card-title">Resumen</h4>
                        <hr />

                        <p class="d-flex justify-content-between">
                            <span>Productos:</span>
                            <strong>@Model.CantidadTotal</strong>
                        </p>

                        <p class="d-flex justify-content-between fs-5">
                            <span>Total:</span>
                            <strong>S/ @Model.PrecioTotal</strong>
                        </p>

                        <div class="d-grid gap-2 mt-3">
                            <a asp-action="Checkout" class="btn btn-primary-tendal d-flex align-items-center justify-content-center gap-2">
                                <i class="bi bi-credit-card"></i> Continuar
                            </a>

                            <a asp-controller="Ecommerce" asp-action="Catalogo" class="btn btn-seguir d-flex align-items-center justify-content-center gap-2">
                                <i class="bi bi-cart-plus"></i> Seguir comprando
                            </a>

                            <form id="formVaciarCarrito" asp-action="Vaciar" method="post" class="w-100">
                                @Html.AntiForgeryToken()
                                <button type="submit" class="btn btn-vaciar w-100 d-flex align-items-center justify-content-center gap-2" onclick="VaciarCarritoConfirmacion()">
                                    <i class="bi bi-trash"></i> Vaciar carrito
                                </button>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    }

