@model TendalProject.Web.ViewModels.Ecommerce.CarritoViewModel
@{
    ViewData["Title"] = "Mi Carrito de Compras";

}
@section Styles {
    <link rel="stylesheet" href="~/css/Ecommerce/Carrito.css" />
}
<div class="container mt-4">
    <h2 class="mb-4 page-title">Tu Carrito <small class="cantidad-title">(@Model.Items.Count() items)</small></h2>
    
    @if (!Model.Items.Any())
    {
        <div class="empty-cart">
            <div class="empty-cart-icon">🛒</div>
            <h4>Tu carrito está vacío</h4>
            <p>Explora nuestros productos y agrega lo que más te guste.</p>

            <a asp-controller="Ecommerce"
               asp-action="Catalogo"
               class="empty-cart-link">
                Seguir comprando →
            </a>
        </div>

    }
    else
    {
        <div class="row">
            <div class="col-lg-8">
                <table class="table align-middle">
                    <thead class="table-dark">
                        <tr>
                            <th>Imagen</th>
                            <th>Artículo</th>
                            <th>Precio</th>
                            <th>Cantidad</th>
                            <th>Subtotal</th>
                            <th></th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model.Items)
                        {
                            <tr>
                                <td style="width:120px;">
                                    <img src="@Url.Content("~/" + item.Imagen + "?v=" + DateTime.Now.Ticks)"
                                         class="img-fluid" />
                                </td>
                                <td>@item.NombreArticulo</td>
                                <td>S/ @item.Precio</td>
                                <td>
                                    <form asp-action="ActualizarCantidad" asp-route-itemId="@item.ItemId" method="post" class="d-flex gap-2">
                                        @Html.AntiForgeryToken()
                                        <input type="number" name="cantidad" value="@item.Cantidad" min="1"
                                               class="form-control form-control-sm" style="width: 80px;" />
                                        <button type="submit" class="btn btn-success btn-sm">
                                            <i class="bi bi-check-lg"></i>
                                        </button>
                                    </form>
                                </td>
                                <td><strong>S/ @item.SubTotal</strong></td>
                                <td>
                                    <form asp-action="EliminarItem" asp-route-itemId="@item.ItemId" method="post">
                                        @Html.AntiForgeryToken()
                                        <button class="btn btn-danger btn-sm">
                                            <i class="bi bi-trash"></i> Quitar
                                        </button>
                                    </form>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>

            <div class="col-lg-4">
                <div class="card shadow">
                    <div class="card-body">
                        <h4 class="card-title">Resumen</h4>
                        <hr />

                        <p class="d-flex justify-content-between">
                            <span>Cantidad total de articulos:</span>
                            <strong>@Model.CantidadTotal</strong>
                        </p>

                        <p class="d-flex justify-content-between fs-5">
                            <span>Total a pagar:</span>
                            <strong class="total-pagar">S/ @Model.PrecioTotal</strong>
                        </p>

                        <hr />

                        <a asp-action="Checkout" class="btn btn-continuar w-100">
                            <i class="bi bi-credit-card"></i> Continuar
                        </a>
                        <a asp-controller="Ecommerce" asp-action="Catalogo" class="btn btn-seguir w-100 mt-2">
                            Seguir comprando
                        </a>
                        <form id="formVaciarCarrito" asp-action="Vaciar" method="post">
                            @Html.AntiForgeryToken()
                            <button type="submit" class="btn btn-danger" onclick="VaciarCarritoConfirmacion()">
                                Vaciar carrito
                            </button>
                        </form>

                    </div>
                </div>
            </div>
        </div>
    }
</div>
@section Scripts {
    <script src="~/js/Ecommerce/Carrito.js"></script>
}