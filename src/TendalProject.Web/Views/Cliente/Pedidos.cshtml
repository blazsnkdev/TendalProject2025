@model TendalProject.Common.Utils.PaginaResult<TendalProject.Web.ViewModels.Cliente.ListarPedidosClienteViewModel>

@{
    ViewData["Title"] = "Pedidos";
    var estadoSeleccionado = ViewBag.Estado?.ToString();
}

@section Styles {
    <link rel="stylesheet" href="~/css/Cliente/Listar.css" />
}

<div class="clientes-container">

    <div class="page-header">
        <h1 class="page-title">Módulo Pedidos</h1>
    </div>

<form asp-action="Pedidos" method="get" class="mb-3 d-flex gap-2">
    <select id="estadoSelect" name="estado" class="form-control" data-selected="@ViewBag.EstadoSeleccionado"></select>
    <input type="hidden" name="clienteId" value="@ViewBag.ClienteId" />
    <button type="submit" class="btn btn-primary">Filtrar</button>
</form>
    @if (Model.Items.Any())
    {
        <!-- CONTROLES SUPERIORES -->
        <div class="pagination-controls">

            <div class="registros-info">
                Mostrando @((Model.PaginaIndice - 1) * Model.TamanioPagina + 1) -
                @Math.Min(Model.PaginaIndice * Model.TamanioPagina, Model.TotalRegistros) de
                @Model.TotalRegistros registros
            </div>

            <div class="tamanio-pagina">
                <span class="tamanio-label">Registros por página:</span>
                <div>
                    <a asp-action="Pedidos"
                       asp-route-pagina="1"
                       asp-route-tamanioPagina="5"
                       asp-route-estado="@ViewBag.Estado"
                       asp-route-clienteId="@ViewBag.ClienteId"
                       class="btn-tamanio @(Model.TamanioPagina == 5 ? "active" : "")">5</a>

                    <a asp-action="Pedidos"
                       asp-route-pagina="1"
                       asp-route-tamanioPagina="10"
                       asp-route-estado="@ViewBag.Estado"
                       asp-route-clienteId="@ViewBag.ClienteId"
                       class="btn-tamanio @(Model.TamanioPagina == 10 ? "active" : "")">10</a>

                    <a asp-action="Pedidos"
                       asp-route-pagina="1"
                       asp-route-tamanioPagina="25"
                       asp-route-estado="@ViewBag.Estado"
                       asp-route-clienteId="@ViewBag.ClienteId"
                       class="btn-tamanio @(Model.TamanioPagina == 25 ? "active" : "")">25</a>

                    <a asp-action="Pedidos"
                       asp-route-pagina="1"
                       asp-route-tamanioPagina="50"
                       asp-route-estado="@ViewBag.Estado"
                       asp-route-clienteId="@ViewBag.ClienteId"
                       class="btn-tamanio @(Model.TamanioPagina == 50 ? "active" : "")">50</a>
                </div>
            </div>

        </div>

        <!-- TABLA -->
        <table class="table table-striped">
            <thead>
                <tr>
                    <th>Codigo</th>
                    <th>Total</th>
                    <th>Fecha</th>
                    <th>Estado</th>
                    <th>Acciones</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model.Items)
                {
                    <tr>
                        <td>@item.Codigo</td>
                        <td>@item.Total</td>
                        <td>@item.FechaRegistro</td>
                        <td>@item.Estado</td>
                        <td>
                            <a asp-controller="Pedido" asp-action="Detalle" asp-route-pedidoId="@item.PedidoId" class="btn btn-sm btn-outline-info">
                                <i class="fas fa-info-circle"></i> Detalle
                            </a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>

        <!-- PAGINACIÓN INFERIOR -->
        <nav aria-label="Paginación de pedidos">
            <ul class="pagination-custom">

                <li class="page-item-custom @(!Model.TienePaginaAnterior ? "disabled" : "")">
                    <a class="page-link-custom"
                       asp-action="Pedidos"
                       asp-route-pagina="1"
                       asp-route-tamanioPagina="@Model.TamanioPagina"
                       asp-route-estado="@ViewBag.Estado"
                       asp-route-clienteId="@ViewBag.ClienteId">
                        <i class="fas fa-angle-double-left"></i>
                    </a>
                </li>

                <li class="page-item-custom @(!Model.TienePaginaAnterior ? "disabled" : "")">
                    <a class="page-link-custom"
                       asp-action="Pedidos"
                       asp-route-pagina="@(Model.PaginaIndice - 1)"
                       asp-route-tamanioPagina="@Model.TamanioPagina"
                       asp-route-estado="@ViewBag.Estado"
                       asp-route-clienteId="@ViewBag.ClienteId">
                        <i class="fas fa-angle-left"></i>
                    </a>
                </li>

                @{
                    int inicio = Math.Max(1, Model.PaginaIndice - 2);
                    int fin = Math.Min(Model.TotalPagias, Model.PaginaIndice + 2);
                }

                @for (int i = inicio; i <= fin; i++)
                {
                    <li class="page-item-custom @(i == Model.PaginaIndice ? "active" : "")">
                        <a class="page-link-custom"
                           asp-action="Pedidos"
                           asp-route-pagina="@i"
                           asp-route-tamanioPagina="@Model.TamanioPagina"
                           asp-route-estado="@ViewBag.Estado"
                           asp-route-clienteId="@ViewBag.ClienteId">
                            @i
                        </a>
                    </li>
                }

                <li class="page-item-custom @(!Model.TienePaginaSiguiente ? "disabled" : "")">
                    <a class="page-link-custom"
                       asp-action="Pedidos"
                       asp-route-pagina="@(Model.PaginaIndice + 1)"
                       asp-route-tamanioPagina="@Model.TamanioPagina"
                       asp-route-estado="@ViewBag.Estado"
                       asp-route-clienteId="@ViewBag.ClienteId">
                        <i class="fas fa-angle-right"></i>
                    </a>
                </li>

                <li class="page-item-custom @(!Model.TienePaginaSiguiente ? "disabled" : "")">
                    <a class="page-link-custom"
                       asp-action="Pedidos"
                       asp-route-pagina="@Model.TotalPagias"
                       asp-route-tamanioPagina="@Model.TamanioPagina"
                       asp-route-estado="@ViewBag.Estado"
                       asp-route-clienteId="@ViewBag.ClienteId">
                        <i class="fas fa-angle-double-right"></i>
                    </a>
                </li>

            </ul>
        </nav>
    }
    else
    {
        <div class="estado-vacio">
            <i class="fas fa-box"></i>
            <h4>No hay pedidos</h4>
            <p>No se encontraron pedidos en el sistema.</p>
        </div>
    }

</div>
