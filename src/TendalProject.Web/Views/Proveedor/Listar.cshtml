@model TendalProject.Common.Utils.PaginaResult<TendalProject.Web.ViewModels.Proveedor.ListarProveedoresViewModel>


@{
    ViewData["Title"] = "Proveedores";
    int paginaActual = ViewBag.PaginaActual ?? 1;
    int totalPaginas = ViewBag.TotalPaginas ?? 1;
}

<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2 class="fw-bold">Listado de Proveedores</h2>
        <a asp-action="Registrar" class="btn btn-primary">
            <i class="bi bi-plus-circle"></i> Nuevo Proveedor
        </a>
    </div>

    <!-- GRID DE 3 COLUMNAS -->
    <div class="row g-4">
        @foreach (var item in Model.Items)
        {
            <div class="col-md-4">
                <!-- 3 columnas -->
                <div class="card shadow-sm border-0 h-100">
                    <div class="card-body">
                        <h5 class="card-title fw-bold">@item.Nombre</h5>
                        <p class="card-text mb-1"><strong>RUC:</strong> @item.Ruc</p>
                        <p class="card-text mb-1"><strong>Razón Social:</strong> @item.RazonSocial</p>
                        <p class="card-text mb-1"><strong>Contacto:</strong> @item.Contacto</p>
                        <p class="card-text mb-1"><strong>Teléfono:</strong> @item.Telefono</p>
                        <p class="card-text mb-1"><strong>Email:</strong> @item.Email</p>
                        <p class="card-text mb-2"><strong>Dirección:</strong> @item.Direccion</p>

                        <span class="badge @(item.Estado == "Activo" ? "bg-success" : "bg-danger")">
                            @item.Estado
                        </span>

                        <div class="mt-3">
                            <a class="btn btn-sm btn-outline-primary" asp-action="Actualizar" asp-route-proveedorId="@item.ProveedorId">
                                <i class="bi bi-pencil-square"></i> Editar
                            </a>
                            <a class="btn btn-sm btn-outline-primary" asp-action="Detalle" asp-route-proveedorId="@item.ProveedorId">
                                <i class="bi bi-pencil-square"></i> Ver
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>

    <!-- PAGINACIÓN -->
    <nav class="mt-4">
        <ul class="pagination justify-content-center">

            <!-- Botón Anterior -->
            <li class="page-item @(paginaActual == 1 ? "disabled" : "")">
                <a class="page-link" asp-action="Listar" asp-route-pagina="@(paginaActual - 1)">Anterior</a>
            </li>

            <!-- Números -->
            @for (int i = 1; i <= totalPaginas; i++)
            {
                <li class="page-item @(i == paginaActual ? "active" : "")">
                    <a class="page-link" asp-action="Listar" asp-route-pagina="@i">@i</a>
                </li>
            }

            <!-- Botón Siguiente -->
            <li class="page-item @(paginaActual == totalPaginas ? "disabled" : "")">
                <a class="page-link" asp-action="Listar" asp-route-pagina="@(paginaActual + 1)">Siguiente</a>
            </li>
        </ul>
    </nav>

</div>


@if ((bool)ViewBag.MostrarInactivos)
{
    <a asp-action="Listar" asp-route-mostrarInactivos="false" class="btn btn-primary">
        Ver Activos
    </a>
}
else
{
    <a asp-action="Listar" asp-route-mostrarInactivos="true" class="btn btn-warning">
        Ver Inactivos
    </a>
}